{
  "name": "invoice-management",
  "version": "1.0.0",
  "description": "Project Invoice Management App",
  "author": "Karlo Boni",
  "build": {
    "appId": "com.kboni.invoice-management",
    "extends": null
  },
  "main": "dist/main.js",
  "keywords": [
    "project",
    "invoice",
    "management",
    "electron",
    "react",
    "sqlite3"
  ],
  "homepage": "",
  "license": "ISC",
  "scripts": {
    "build": "webpack --mode=production",
    "electron:build": "electron-builder",
    "react:dev": "webpack serve --mode=development",
    "electron:dev": "nodemon --stats-error-details",
    "dev": "cp ./db/database.sqlite ./dist/ && concurrently -n react,electron -c bgCyan,bgWhite --kill-others \"npm run react:dev\" \"npm run electron:dev\"",
    "start": "npm run build && electron dist/main.js --mode=production",
    "release": "npm run build && npm run electron:build",
    "rebuild": "electron-rebuild -f -w sqlite3"
  },
  "dependencies": {
    "@hookstate/core": "3.0.4",
    "css-loader": "^5.0.1",
    "dateformat": "^4.5.1",
    "electron-log": "^4.3.1",
    "knex": "0.21.17",
    "knex-stringcase": "^1.4.5",
    "react": "17.0.1",
    "react-confirm-alert": "^2.7.0",
    "react-dom": "17.0.1",
    "react-multi-select-component": "3.1.3",
    "short-uuid": "^4.1.0",
    "sqlite3": "^5.0.1",
    "style-loader": "2.0.0",
    "ts-loader": "8.0.14",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-pdf": "^5.0.1",
    "@types/sqlite3": "^3.1.7",
    "concurrently": "^5.3.0",
    "electron": "11.2.1",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "electron-rebuild": "^2.3.4",
    "html-webpack-plugin": "4.5.1",
    "nodemon": "^2.0.7",
    "noop2": "^2.0.0",
    "react-scripts": "^4.0.2",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  }
}
